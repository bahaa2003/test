{
  "name": "attendance-system",
  "version": "1.0.0",
  "description": "نظام إدارة الحضور والانصراف باستخدام تقنية NFC",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:stress": "node tests/stressTest.js",
    "build": "echo 'No build step required for Node.js application'",
    "test:stress:large": "REQUESTS=5000 npm run test:stress",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "db:index": "node ./src/utils/dbIndexes.js",
    "db:optimize": "npm run db:index && npm run db:backup",
    "db:backup": "node ./src/utils/backupService.js",
    "db:restore": "node ./src/utils/backupService.js --restore",
    "logs:clear": "rm -rf logs/*",
    "clean": "npm run logs:clear && rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install"
  },
  "keywords": [
    "attendance",
    "nfc",
    "management",
    "system",
    "education",
    "university",
    "college"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "mongoose": "^8.9.5",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.8.1",
    "winston": "^3.13.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/multer": "^1.4.12",
    "@types/nodemailer": "^6.4.14",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/attendance-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/attendance-system/issues"
  },
  "homepage": "https://github.com/your-username/attendance-system#readme"
}
